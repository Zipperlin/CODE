<hc:PopupWindow x:Class="InstrumentOperation.View.PopDialog.TransferPropertiesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InstrumentOperation.View.PopDialog"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="TransferPropertiesDialog" Height="200" Width="300"
                WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="30" Text="模块名称"></TextBlock>
                <TextBox Margin="5" Height="20" Width="100" Text="{Binding TransferName}"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Content="确认" Margin="80,10,10,10" Command="{Binding Command_SetTransferName}"></Button>
                <Button Content="取消" Margin="10" Command="{Binding Command_CloseTransferPropertiesDialog}"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</hc:PopupWindow>
